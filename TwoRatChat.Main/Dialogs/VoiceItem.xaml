<UserControl x:Class="TwoRatChat.Main.Dialogs.VoiceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwoRatChat.Main.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="100" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

            <TextBox x:Name="talkText00" KeyDown="talkText00_KeyDown"
                 Margin="2" Grid.Column="0" Grid.Row="0" />
            <ComboBox x:Name="talkText01" Margin="2" Grid.Column="1" Grid.Row="0" />

        <Button Grid.Column="2" Content="Talk" Click="Button_Click" />
    </Grid>
</UserControl>
